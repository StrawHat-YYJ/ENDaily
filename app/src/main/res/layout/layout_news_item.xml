<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="?attr/containerBackground">

    <ImageView
        android:id="@+id/news_img"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/news_img"
        android:layout_alignTop="@+id/news_img"
        android:textSize="20sp"
        android:textColor="?attr/textColor"/>
    <TextView
        android:id="@+id/news_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@+id/news_title"
        android:layout_alignLeft="@+id/news_title"
        android:layout_marginTop="10dp"
        android:textColor="?attr/textColor"/>
    <TextView
        android:id="@+id/news_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/news_des"
        android:textColor="?attr/textColor"/>

</RelativeLayout>
