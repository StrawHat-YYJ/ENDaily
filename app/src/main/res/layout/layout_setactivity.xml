<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/containerBackground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/titleBackground"
        android:text="设置"
        android:textSize="20sp"
        android:textColor="?attr/titleColor"
        android:gravity="center_horizontal"
        android:padding="3dp"/>
    <LinearLayout
        android:id="@+id/setAty_clearCacheLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/clearcache"/>
        <TextView
            android:id="@+id/setAty_clearCache"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="清除缓存"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="?attr/textColor"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="?attr/hintBackground"/>
    <LinearLayout
        android:id="@+id/setAty_noImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setAty_noImageIv"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/noimage_on"/>
        <TextView
            android:id="@+id/setAty_noImageTv"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="5dp"
            android:text="无图模式"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="?attr/textColor"/>
    </LinearLayout>

</LinearLayout>